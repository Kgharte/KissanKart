<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/backgrnd"
    tools:context="com.example.meet.kissankart.LoginActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/greennn" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="16dp"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/buyeremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="  Email ID"
                android:drawableRight="@drawable/emailicon"
                android:textColorHint="#538A28"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/buyerpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/greenpadlock"
                android:hint=" Password"
                android:textColorHint="#538A28"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/buyerloginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Log in"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:background="@drawable/mybutton"
                />


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/buyerfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Forgot Password? Click Here"
        android:textColor="#538A28"
        android:layout_marginLeft="60dp"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/buyergotosu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textColor="#538A28"
        android:textSize="18sp"
        android:layout_marginLeft="44dp"
        android:text="New to KissanKart? Sign Up here"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="normal" />
</LinearLayout>
