<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/texture"
    tools:context="com.example.meet.kissankart.BuyerSeller">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/buyerlogo"
        android:src="@mipmap/buyericon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buyer"
        android:fontFamily="cursive"
        android:textSize="60dp"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_below="@+id/buyerlogo"
        android:layout_alignStart="@+id/textView6" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/line"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/sellerlogo"
        android:src="@mipmap/farmerlogo"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/buyerlogo"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seller"
        android:fontFamily="cursive"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:id="@+id/textView6"
        android:layout_below="@+id/sellerlogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="*click on one of these to start"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:id="@+id/textView7"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
